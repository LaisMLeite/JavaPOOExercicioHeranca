
package heranca;

//Herança para diferença: subclasse Aluno é uma especialização da superclasse Pessoa, Pessoa é uma generalização de aluno.
   
public class Aluno extends Pessoa { //se for public final class, não poderá ter classes filhas
    private String curso;
    private int matricula;

    public void pagarMensalidade(){ //se este metodo for final, nao poderá ser sobreposto em bolsista
        System.out.println("Pagando mensalidade de aluno " + this.getNome());
  }

    public int getMatricula() {
        return matricula;
    }

    public void setMatricula(int matricula) {
        this.matricula = matricula;
    }

    public String getCurso() {
        return curso;
    }

    public void setCurso(String curso) {
        this.curso = curso;
    }


}
